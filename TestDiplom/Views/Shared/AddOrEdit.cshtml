@model TestDiplom.Models.author_in_books


<div class="row">
    <div class="col-md-6 offset-md-3">
        <h1>Transaction</h1>
        <form asp-action="AddOrEdit" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="s.title" class="control-label"></label>
                <input asp-for="s.title" class="form-control" />
                <span asp-validation-for="s.title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="s.year_create" class="control-label"></label>
                <input asp-for="s.year_create" class="form-control" />
                <span asp-validation-for="s.year_create" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="c.first_name_author" class="control-label"></label>
                <input asp-for="c.first_name_author" class="form-control" />
                <span asp-validation-for="c.first_name_author" class=" text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="c.patronymic_author" class="control-label"></label>
                <input asp-for="c.patronymic_author" class="form-control" />
                <span asp-validation-for="c.patronymic_author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="c.surname_author" class="control-label"></label>
                <input asp-for="c.surname_author" class="form-control" />
                <span asp-validation-for="c.surname_author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="c.date_birth" class="control-label"></label>
                <input asp-for="c.date_birth" class="form-control" />
                <span asp-validation-for="c.date_birth" class="text-danger"></span>
            </div>
            
            


            <div class="row mt-2">
                <div class="col-md-6">
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary w-100" />
                    </div>
                </div>
                <div class="col-md-6">
                    <a asp-controller="Home" asp-action="ShowBooks" class="btn btn-secondary  w-100">View All</a>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
